[package]
name = "{{ crate_name }}"
description = "{{ description }}"
version = "0.1.0"

[lib]
name = "aod_{{ crate_name | pascal_case }}"
crate-type = ["cdylib"]

[features]
default = []

[dependencies]
after-effects = { workspace = true }
utils = { path = "../../crates/utils" }
{% if features contains "opencv" -%}
opencv = { workspace = true }
{%- endif %}
{%- if features contains "rustfft" -%}
rustfft = { workspace = true }
num-complex = { workspace = true }
{%- endif %}
{%- if features contains "nalgebra" -%}
nalgebra = { workspace = true }
{%- endif %}
{%- if features contains "rand" %}
rand = { workspace = true }
{%- endif %}

[dev-dependencies]
pipl = { workspace = true }

[build-dependencies]
chrono.workspace = true
pipl.workspace = true

[lints]
workspace = true